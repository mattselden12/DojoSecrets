@model UserValidator

<div id="index">
    <div class="side">
        <h1>Register</h1>
        <form asp-action="RegisterProcess" asp-controller="Home" method="post" class="register">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">First Name:</label>
                <span asp-validation-for="FirstName" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Last Name:</label>
                <span asp-validation-for="LastName" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="LastName">
                </div>
            </div>
            <p style="color:red;">@ViewBag.Error</p>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email:</label>
                <span asp-validation-for="Email" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Password:</label>
                <span asp-validation-for="Password" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Confirm Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="side">
        <h1 class="login">Login</h1>
        <form asp-action="LoginProcess" asp-controller="Home" method="post">
            <p style="color:red;">@ViewBag.BadPass</p>
            <p style="color:red;">@ViewBag.NoUser</p>
            <p style="color:red;">@ViewBag.PassNull</p>
            <p style="color:red;">@ViewBag.NotLoggedIn</p>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LEmail">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="LPassword">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>